#!/bin/bash
# Libernet Mod Installer with Custom Favicon, White Theme, and Result Box Styling

set -e

# ---------------------------
# Configuration Variables
# ---------------------------
LUCI_CONTROLLER="/usr/lib/lua/luci/controller/libernet.lua"
LUCI_VIEW="/usr/lib/lua/luci/view/libernet.htm"
LIBERNET_DIR="/www/libernet"
BACKUP_DIR="/www/libernet_backup_$(date +%s)"
GITHUB_BASE="https://raw.githubusercontent.com/faiz007t/libernetmod/main"
FAVICON_URL="https://raw.githubusercontent.com/faiz007t/libernetmod/refs/heads/main/icon.ico"
FAVICON_LOCAL="/www/favicon.ico"
BG_URL="https://raw.githubusercontent.com/faiz007t/libernetmod/refs/heads/main/re.jpg"

# ---------------------------
# Root Check
# ---------------------------
if [[ "$EUID" -ne 0 ]]; then
   echo "ERROR: Script must be run as root!"
   exit 1
fi

# ---------------------------
# Initialization
# ---------------------------
clear
echo -e "##############################################"
echo -e "#        Libernet Mod v1.5.4 Installer Pro   #"
echo -e "##############################################\n"
echo -e "Make sure you have installed the basic Libernet by Lutfa Ilham!\n"
sleep 2

# ---------------------------
# Dependency Check
# ---------------------------
check_dependency() {
    if ! command -v $1 &> /dev/null; then
        echo "Installing dependency: $1..."
        opkg update && opkg install $1
    fi
}

check_dependency unzip
check_dependency wget

# ---------------------------
# Backup Existing Installation
# ---------------------------
if [ -d "$LIBERNET_DIR" ]; then
    echo -e "\nCreating backup of previous installation..."
    cp -r "$LIBERNET_DIR" "$BACKUP_DIR"
    echo -e "Backup saved at: $BACKUP_DIR\n"
fi

# ---------------------------
# Download Favicon
# ---------------------------
echo -e "\nDownloading favicon..."
wget -O "$FAVICON_LOCAL" --no-check-certificate "$FAVICON_URL"

# ---------------------------
# Main Installation
# ---------------------------
echo -e "\nStarting Libernet Mod installation process..."
{
    echo -e "\nDownloading main package..."
    wget -O "/www/libernet.zip" --no-check-certificate "${GITHUB_BASE}/libernet.zip"

    echo -e "\nExtracting files..."
    unzip -o "/www/libernet.zip" -d "/www"

    echo -e "\nInstalling modified files:"
    declare -A MOD_FILES=(
        ["system.php"]="system.php"
        ["navbar.php"]="navbar.php"
        ["index.php"]="index.php"
        ["head.php"]="head.php"
        ["footer.php"]="footer.php"
        ["config.php"]="config.php"
        ["about.php"]="about.php"
        ["bootstrap.min.css"]="bootstrap.min.css"
        ["ping-loop.sh"]="ping-loop.sh"
    )

    for file in "${!MOD_FILES[@]}"; do
        echo " - ${MOD_FILES[$file]}"
        wget -O "${LIBERNET_DIR}/${MOD_FILES[$file]}" --no-check-certificate "${GITHUB_BASE}/${file}"
    done

    echo -e "\nSetting file permissions..."
    chmod +x "/root/libernet/bin/ping-loop.sh"
} 2>&1 | tee install.log

# ---------------------------
# LuCI Integration
# ---------------------------
echo -e "\nCreating LuCI integration..."
cat > $LUCI_CONTROLLER <<'EOF'
module("luci.controller.libernet", package.seeall)

function index()
    entry({"admin", "services", "libernet"}, template("libernet"), _("Libernet"), 55).leaf = true
end
EOF

cat > $LUCI_VIEW <<EOF
<!DOCTYPE html>
<html>
<head>
  <title>Libernet Mod | Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      background: #222;
      touch-action: manipulation;
      background-image: url('$BG_URL');
      background-repeat: no-repeat;
      background-position: center;
      background-attachment: fixed;
      background-size: cover;
    }
    #libernet {
      width: 100vw;
      height: 100vh;
      border: none;
      display: block;
      background: transparent;
    }
    #luci-back {
      position: fixed;
      top: 10px;
      left: 10px;
      z-index: 1000;
      background: #fff;
      border: none;
      border-radius: 50%;
      padding: 8px;
      width: 48px;
      height: 48px;
      cursor: pointer;
      transition: all 0.2s;
      touch-action: manipulation;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    #luci-back svg {
      width: 28px;
      height: 28px;
      fill: #000;
    }
    @media (max-width: 768px) {
      #luci-back {
        width: 44px;
        height: 44px;
        top: 8px;
        left: 8px;
      }
      #luci-back svg {
        width: 24px;
        height: 24px;
      }
    }
    /* --- Libernet UI (iframe) style hints for developer --- */
    /* Fixed white navbar and hamburger icon: */
    /* .navbar, .navbar-box { background: #fff !important; }
       .navbar-icon, .navbar-toggler-icon {
         color: #fff !important; background: #000 !important;
         /* For Bootstrap 4/5: */
         /* background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,255,255,1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E"); */
       }
       .navbar-text { color: #000 !important; }
    */
    /* Result box: */
    .result-box, #result {
      background: #fff !important;
      color: #000 !important;
      border-radius: 8px;
      padding: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin: 16px 0;
    }
  </style>
</head>
<body>
  <button id="luci-back"
          role="button"
          aria-label="Return to LuCI interface"
          onclick="window.location.href='http://' + window.location.hostname + '/cgi-bin/luci/'">
    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
    </svg>
  </button>
  <iframe id="libernet" scrolling="auto"></iframe>
  <script>
    document.getElementById("libernet").src = "http://" + window.location.hostname + "/libernet";
  </script>
</body>
</html>
EOF

# ---------------------------
# Final Configuration
# ---------------------------
echo -e "\nSetting file permissions..."
chmod 644 $LUCI_CONTROLLER
chmod 644 $LUCI_VIEW

echo -e "\nRestarting web service..."
/etc/init.d/uhttpd restart

# ---------------------------
# Cleanup
# ---------------------------
echo -e "\nCleaning up installation files..."
rm -f "/www/libernet.zip"
rm -f "$0"

# ---------------------------
# Completion Message
# ---------------------------
echo -e "\n\033[1;32mINSTALLATION SUCCESSFUL!\033[0m"
echo -e "Access Libernet Mod via:"
echo -e "1. Web Interface: \033[4mhttp://\$(uci get network.lan.ipaddr)/libernet\033[0m"
echo -e "2. LuCI Interface: Services Menu -> Libernet"
echo -e "\nFavicon is now set for the Libernet LuCI page."
echo -e "- Result box is white with black text."
echo -e "- Navbar and hamburger icon are white (see CSS hints)."
echo -e "- Clear your browser cache if you don't see the new icon."
echo -e "- Check installation log at: install.log"
echo -e "- Backup important configurations\n"
